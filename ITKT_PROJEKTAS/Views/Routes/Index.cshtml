@model IEnumerable<ITKT_PROJEKTAS.Entities.Route>

@{
    ViewData["Title"] = "Maršrutai";
}

@{
    int x = 0;
    foreach(var item in Model)
    {
        <div id="@item.Id.ToString()map" style="width: 250px; height: 250px"></div>
        x++;
    }
}


@section Scripts {

<script>

        @foreach (var r in Model)
        {            
            <text>
            var _@r.Id.ToString()map = L.map('_@r.Id.ToString()map').setView([51.505, -0.09], 13);

            L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(_@r.Id.ToString()map);

            L.marker([51.5, -0.09]).addTo(_@r.Id.ToString()map)
                .bindPopup('A pretty CSS3 popup.<br> Easily customizable.')
                .openPopup();
            </text>
        }
 



 </script>
}