@model IEnumerable<ITKT_PROJEKTAS.Entities.Route>

@{
    ViewData["Title"] = "Maršrutai - Kurimas";
}

@ViewBag.Update
<p>
    <a asp-action="Create">Sukurti maršrutą</a>
</p>
</br>
@{
    if (ViewBag.Erorras != null)
    {
        <div class="form-group">
            <div class="alert alert-success" role="alert">
                @ViewBag.Erorras
            </div>
        </div>
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPeople)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Length)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPeople)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Redagavimas</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Ištrinti</a> 
            </td>
        </tr>
}
    </tbody>
</table>
