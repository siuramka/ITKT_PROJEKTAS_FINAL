@model IEnumerable<ITKT_PROJEKTAS.Entities.Paslauga>

@{
    ViewData["Title"] = "Paslaugos";
}

<h1>Paslaugos</h1>

<p>
    <a asp-action="Create">Sukurti paslaugą</a>
</p>

@{
    if (ViewBag.Erorras != null)
    {
        <div class="form-group">
            <div class="alert alert-success" role="alert">
                @ViewBag.Erorras
            </div>
        </div>
    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Redaguoti</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Ištrinti</a>
            </td>
        </tr>
}
    </tbody>
</table>
